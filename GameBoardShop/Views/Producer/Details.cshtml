@using GameBoardShop.ViewModels.ProducerModels;
@model ProducerVM

<div>
     <h1 class="text-center my-5 ">Details</h1>
     <div class="container">
         <div class="row justify-content-center mb-3">
             <div class="col-6 text-center">
                 <h4>Logo</h4>
             </div>
         </div>
         <div class="row justify-content-center">
             <div class="col-5 image-wrapper ">
                 <img class="img-fluid w-100 h-100 rounded-circle border border-dark" src="@Model.ImageURL"/>
             </div>
         </div>
     </div>
    <div class="container">
        <div class="row text-end p-3 m-2">
            <div class="col-6 fw-bold">
                @Html.DisplayNameFor(model=> model.Name) :
            </div>
             <div class="col-6 text-start">
                 @Model.Name
             </div>
         </div>
        <div class="row m-2">
            <div class="col-6 text-end fw-bold">
                @Html.DisplayNameFor(model=> model.CreatedAt) :
            </div>
            <div class="col-6 text-start">
                @Model.CreatedAt
             </div>
         </div>
        <div class="row justify-content-center text-center m-3">
            <div class="col-5 fw-bold">
                @Html.DisplayNameFor(model=> model.Description) :
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <div class="col-6">
                @Model.Description
            </div>
        </div>
        <div class="row justify-content-center">
            <a asp-action="Update" asp-controller="Producer" asp-route-id="@Model.Id" class="btn btn-info w-25 m-3">Edit <i class="bi bi-pencil-square me-2"></i></a>
            <a asp-action="Index" class="btn btn-success w-25 m-3">Show All <i class="bi bi-justify"></i></a>
        </div>
     </div>
</div>