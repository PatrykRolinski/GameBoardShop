@using GameBoardShop.Data.Enums;
@using GameBoardShop.ViewModels.ItemModels;
@model NewItemVM

<div>
    <h1 class="text-center my-5 ">Add Producer</h1>
    <div class="container">
        <form class="row justify-content-center gy-4" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row justify-content-center mb-3">
                    <div class="col-6 text-center">
                        <h4>Logo Preview</h4>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-5 image-wrapper ">
                        <img class="img-fluid w-100 h-100 rounded-circle border border-dark" id="ProfilePicturePreview" />
                    </div>
                </div>

            </div>
            <div class="col-8">
                <label asp-for="Name" class="control-label mb-2"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-8">
                <label asp-for="ImageURL" class="control-label mb-2"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="col-8">
                <label asp-for="Description" class="control-label mb-2"></label>
                <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row justify-content-center mt-2">
                <div class="col-4">
                    <label asp-for="Price" class="control-label mb-2"></label>
                    <input type="number" placeholder="1.00" step="0.01" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="ItemCategory" class="control-label mb-2">Item Category</label>
                    <select asp-for="ItemCategory" class="form-control" asp-items="@Html.GetEnumSelectList<ItemCategory>()"></select>
                    <span asp-validation-for="ItemCategory" class="text-danger"></span>
                </div>
            </div>
             
            <div class="row justify-content-center mt-2">
                <div class="col-4">
                    <label asp-for="ProducerId" class="control-label"> Producer</label>
                    <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                    <span asp-validation-for="ProducerId" class="text-danger"></span>
                </div>
                 <div class="col-4">
                    <label asp-for="GameCategoriesId" class="control-label" id="GameCategoriesLabel">Game Categories</label>
                    <select asp-for="GameCategoriesId" class="form-control" asp-items="ViewBag.GameCategories"></select>
                    <span asp-validation-for="GameCategoriesId" class="text-danger"></span>
                </div>
            </div>
            

            <div class="col-8 d-flex justify-content-between my-3">
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                <input type="submit" value="Create" class="btn btn-success float-right" />
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <script>
         $("#ItemCategory").on("change", function () {
            if($(this).val() == '1')
            {
                $('#GameCategoriesId').hide();
                $('#GameCategoriesLabel').hide();

            }
            else if($(this).val()== '0')
            {
                $('#GameCategoriesId').show();
                $('#GameCategoriesLabel').show();
            }
        });

    </script>
}