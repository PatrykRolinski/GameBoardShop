@using GameBoardShop.ViewModels.ItemModels;
@model IEnumerable<ItemVM>

<div class="container">
    <div class="row justify-content-between">
@foreach(var item in Model)
{
    <div class="card col-6 mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@item.ImageUrl" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.ProducerName</p>
                    @if(item.GameCategories is not null)
                    {
                        @foreach(var gameCategory in item.GameCategories)
                        {
                             <p class="card-text">@gameCategory</p>
                        }
                       
                    }
                  
                    <p class="card-text"><small class="text-muted">@item.Price</small></p>
                </div>
            </div>
        </div>
    </div>
}
    </div>
</div>
